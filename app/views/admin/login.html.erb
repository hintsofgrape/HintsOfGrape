<% form_tag do %>
  <fieldset>
    <legend> Please log in </legend>
    <div>
      <label for="name">Name:</label>
      <%= text_field_tag :name, params[:name] %>
    </div>
    <div>
      <label for="password">Password:</label>
      <%= password_field_tag :password %>
    </div>
    <div>
      <%= submit_tag "Submit" %>
    </div>
  </fieldset>
<% end %>
